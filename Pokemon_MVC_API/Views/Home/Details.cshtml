@model Pokemon_MVC_API.Models.Pokemon

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles de @Model.Name</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .pokemon-details {
            max-width: 800px;
            width: 100%;
            padding: 30px;
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .pokemon-details:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
            }

            .pokemon-details img {
                max-width: 100%;
                height: 300px;
                object-fit: contain;
                border-radius: 15px;
                margin-bottom: 20px;
            }

            .pokemon-details h2 {
                font-size: 2.5rem;
                font-weight: bold;
                color: #333;
                margin-bottom: 15px;
            }

            .pokemon-details p {
                font-size: 1.1rem;
                color: #555;
                margin-bottom: 10px;
            }

            .pokemon-details ul {
                list-style: none;
                padding: 0;
                margin: 20px 0;
            }

                .pokemon-details ul li {
                    font-size: 1rem;
                    color: #666;
                    margin: 5px 0;
                    padding: 5px;
                    background: #f8f9fa;
                    border-radius: 10px;
                    display: inline-block;
                    margin-right: 10px;
                }

        .btn-back {
            margin-top: 20px;
            background: linear-gradient(135deg, #ff6f61, #ff4a3d);
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
            font-size: 1rem;
            color: white;
            transition: background 0.3s ease, transform 0.3s ease;
        }

            .btn-back:hover {
                background: linear-gradient(135deg, #ff4a3d, #ff6f61);
                transform: scale(1.05);
            }

        footer {
            padding: 20px 0;
            margin-top: 60px; 
        }

            footer a {
                color: #ff6f61;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                footer a:hover {
                    color: #ff4a3d;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="pokemon-details">
            <img src="@Model.ImageUrl" alt="@Model.Name" />
            <h2>@Model.Name</h2>
            <p><strong>Descripción:</strong> @Model.Description</p>
            <p><strong>Altura:</strong> @(Model.Height / 10.0) m</p>
            <p><strong>Peso:</strong> @(Model.Weight / 10.0) kg</p>
            <p><strong>Habilidades:</strong></p>
            <ul>
                @foreach (var ability in Model.Abilities)
                {
                    <li>@ability.ability.name</li>
                }
            </ul>
            <a asp-action="Index" class="btn btn-back">Volver a la lista</a>
        </div>
    </div>

    <footer>
    </footer>
</body>
</html>