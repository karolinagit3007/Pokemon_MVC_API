@model List<Pokemon_MVC_API.Models.Pokemon>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokémon List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <style>
        .pokemon-card {
            width: 18rem;
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: linear-gradient(135deg, #ffffff, #f8f9fa);
            overflow: hidden;
            position: relative;
        }

            .pokemon-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
            }

            .pokemon-card img {
                border-top-left-radius: 15px;
                border-top-right-radius: 15px;
                height: 250px;
                object-fit: contain;
                transition: transform 0.3s ease;
            }

            .pokemon-card:hover img {
                transform: scale(1.1);
            }

            .pokemon-card .card-body {
                padding: 1.5rem;
                text-align: center;
                background: rgba(255, 255, 255, 0.9);
                border-bottom-left-radius: 15px;
                border-bottom-right-radius: 15px;
            }

            .pokemon-card .card-title {
                font-size: 1.5rem;
                font-weight: bold;
                color: #333;
                margin-bottom: 0.5rem;
            }

            .pokemon-card .card-text {
                font-size: 1rem;
                color: #666;
                margin-bottom: 1rem;
            }

            .pokemon-card .btn-primary {
                background: linear-gradient(135deg, #ff6f61, #ff4a3d);
                border: none;
                border-radius: 25px;
                padding: 0.5rem 1.5rem;
                font-size: 1rem;
                transition: background 0.3s ease, transform 0.3s ease;
                position: relative;
                overflow: hidden;
            }

                .pokemon-card .btn-primary::before {
                    content: "";
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    width: 300%;
                    height: 300%;
                    background: rgba(255, 255, 255, 0.3);
                    transform: translate(-50%, -50%) rotate(45deg);
                    transition: opacity 0.5s ease;
                    opacity: 0;
                }

                .pokemon-card .btn-primary:hover::before {
                    opacity: 1;
                }

                .pokemon-card .btn-primary:hover {
                    background: linear-gradient(135deg, #ff4a3d, #ff6f61);
                    transform: scale(1.05);
                }

        .custom-pagination {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 60px;
            margin-bottom: 60px;
        }

            .custom-pagination .page-link {
                background: linear-gradient(135deg, #ff6f61, #ff4a3d);
                color: white;
                border: none;
                border-radius: 25px;
                padding: 0.5rem 1rem;
                font-size: 1rem;
                transition: background 0.3s ease, transform 0.3s ease;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .custom-pagination .page-link:hover {
                    background: linear-gradient(135deg, #ff4a3d, #ff6f61);
                    transform: scale(1.1);
                }

                .custom-pagination .page-link.disabled {
                    background: #cccccc;
                    cursor: not-allowed;
                    transform: none;
                }

        .pagination-space {
            margin-top: 80px;
            margin-bottom: 80px;
        }

        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            margin-top: 60px;
            text-align: center;
        }

            footer p {
                margin: 0;
                color: #666;
            }

            footer a {
                color: #ff6f61;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                footer a:hover {
                    color: #ff4a3d;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1 class="my-4">Pokémon List</h1>

        <div class="d-flex flex-wrap gap-5 justify-content-center">
            @foreach (var pokemon in Model)
            {
                <div class="pokemon-card">
                    <img src="@pokemon.ImageUrl"
                         alt="@pokemon.Name"
                         class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@pokemon.Name</h5>
                        <p class="card-text">@pokemon.Description</p>
                        <a class="btn btn-primary"
                           asp-controller="Home"
                           asp-action="Details"
                           asp-route-id="@pokemon.Name">
                            <i class="fas fa-info-circle"></i> Ver Detalles
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="pagination-space"></div>

        <div class="custom-pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" class="page-link">
                    <i class="fas fa-chevron-left"></i> Anterior
                </a>
            }
            <span class="page-link disabled">Página @ViewBag.CurrentPage</span>
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" class="page-link">
                Siguiente <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </div>

    <footer>
        <p>© 2025 - Pokemon_MVC_API - <a asp-controller="Home" asp-action="Privacy">Privacy</a></p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>